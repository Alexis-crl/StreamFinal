{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!{% endblock %}

{% block body %}
<div id='calendar'></div>
{% endblock %}


{% block javascripts %}
    <script>
        window.onload = () =>{
            let calendarElt = document.querySelector('#calendar')
            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth', 
                locale: 'fr'
            });
            calendar.render();
        }
    </script>
{% endblock %}
