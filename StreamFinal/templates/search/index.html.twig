{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if products | length == 0 %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}
                <h2 class="ResSearch">Vos résulats de recherche</h2>
                {% for product in products %}
                    <div class='card'>
                        <div class='card-img'>
                            <img src="{{ product.image }}"/>
                        </div>

                        <div class='card-name'>
                            <h2>{{ product.name }}</h2>
                        </div>

                        <div class='card-info'>
                            <div>Categorie : {{ product.category }}</div>
                            <div>Disponibilité : {{ product.disponibility }}</div>
                        </div>

                        <a class='card-show' href="{{ path('app_product_show', {'id': product.id}) }}">Voir produit</a>
                    </div>     
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
